%h1 Listing plans for class #{@classroom.name}

%table.table
  %tr
    %th Date
    %th
    %th
    %th

  - @plans.each do |plan|
    %tr
      %td= plan.updated_at
      %td= link_to 'Show', plan
      %td= link_to 'Edit', edit_plan_path(plan)
      %td= link_to 'Destroy', plan, :method => :delete, :data => { :confirm => 'Are you sure?' }

%br

= link_to 'New Plan', new_classroom_plan_path(@classroom), class: "btn btn-success"
