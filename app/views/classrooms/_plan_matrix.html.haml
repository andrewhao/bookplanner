%section
  %h2= "Plans"
  = link_to "Create Plan", new_classroom_plan_path(classroom), class: "btn btn-success btn-xs"

  - if plans.blank?
    %p There are no plans. Might you want to create one?
  - else
    %table.table
      %tr
        %th
        - plans.each do |plan|
          %th= plan.created_at
      - students.each do |s|
        %tr
          %th= s.full_name
          - plans.each do |plan|
            %th= plan.assignments.where(student_id: s.id).try(:first).try(:book_bag).try(&:global_id)
      %tr
        %td
        - plans.each do |plan|
          %td
            = link_to "Edit", edit_plan_path(plan), class: "btn btn-xs btn-info"
            = button_to "Delete", plan_path(plan), method: "delete", class: "btn btn-xs btn-danger"

