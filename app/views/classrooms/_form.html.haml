= simple_form_for(@classroom, html: {class: "form-horizontal"}) do |f|
  = f.error_notification

  = f.input :name, required: true, class: "form-control"
  = f.input :school_id, collection: School.all, value_method: :id, label_method: :name, required: true
  = f.button :submit, class: "btn-primary"
